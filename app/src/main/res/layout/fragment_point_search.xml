<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.auth.signup.UserInfoFragment"
        android:orientation="vertical"
        android:background="@color/white">

        <include layout="@layout/layout_common_toolbar" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:padding="@dimen/layout_padding">

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <com.goodiebag.pinview.Pinview
                    android:id="@+id/pin_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:pinWidth="50dp"
                    app:pinHeight="50dp"
                    app:pinLength="4"
                    app:cursorVisible="true"
                    app:forceKeyboard="false"
                    app:inputType="number"
                    app:password="false"
                    android:layout_gravity="center_horizontal"/>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:stretchColumns="0,1,2,3">

                    <TableRow
                        style="@style/TableRowStyle">
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_1"
                            style="@style/KeyPadStyle"
                            android:text="1"/>
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_2"
                            style="@style/KeyPadStyle"
                            android:text="2"/>
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_3"
                            style="@style/KeyPadStyle"
                            android:text="3"/>
                    </TableRow>

                    <TableRow
                        style="@style/TableRowStyle">
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_4"
                            style="@style/KeyPadStyle"
                            android:text="4"/>
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_5"
                            style="@style/KeyPadStyle"
                            android:text="5"/>
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_6"
                            style="@style/KeyPadStyle"
                            android:text="6"/>
                    </TableRow>


                    <TableRow
                        style="@style/TableRowStyle">
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_7"
                            style="@style/KeyPadStyle"
                            android:text="7"/>
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_8"
                            style="@style/KeyPadStyle"
                            android:text="8"/>
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_9"
                            style="@style/KeyPadStyle"
                            android:text="9"/>
                    </TableRow>

                    <TableRow
                        style="@style/TableRowStyle">
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_del"
                            style="@style/KeyPadStyle"
                            android:text="del"/>
                        <com.homeground.app.common.ui.textview.ScaleTextView
                            android:id="@+id/key_0"
                            style="@style/KeyPadStyle"
                            android:text="0"/>
                        <com.homeground.app.common.ui.imageview.ScaleImageView
                            android:id="@+id/key_search"
                            android:layout_height="match_parent"
                            android:layout_width="match_parent"
                            android:src="@drawable/baseline_search_black_18" />
                    </TableRow>


                </TableLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</layout>