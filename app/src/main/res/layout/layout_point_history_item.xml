<?xml version="1.0" encoding="utf-8"?>
<com.daimajia.swipe.SwipeLayout
    android:id="@+id/point_history_swipe_layout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <com.homeground.app.common.ui.textview.ScaleTextView
            android:id="@+id/point_history_cancel_text"
            android:layout_marginStart="@dimen/common_padding"
            android:layout_width="@dimen/user_list_bottom_view_width"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/text_size_20"
            android:background="@color/grey"
            android:text="@string/cancel"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">



<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/common_padding"
    android:paddingStart="@dimen/common_padding"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/point_history_device_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/point_history_device_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_18"
            android:text="-"/>

        <TextView
            android:id="@+id/point_history_date_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding"
            android:textSize="@dimen/text_size_12"
            android:text="-"/>

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/point_history_device_layout"
        android:orientation="vertical">

        <TextView
            android:id="@+id/point_history_point_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size_20"
            android:layout_gravity="end"
            android:text="-"/>

        <TextView
            android:id="@+id/point_history_state_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/common_padding"
            android:textSize="@dimen/text_size_13"
            android:layout_gravity="end"
            android:text="-"/>

    </LinearLayout>

</RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/common_line_width"
            android:layout_marginTop="@dimen/common_padding"
            android:background="@color/warm_grey_two"/>
    </LinearLayout>

</com.daimajia.swipe.SwipeLayout>