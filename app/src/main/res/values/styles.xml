<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
    </style>

    <style name="AppTheme.NoActionBar.Translucent" parent="NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation</item>
    </style>

    <style name="CommonToolbar" parent="Base.V7.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/common_toolbar_height</item>
        <item name="contentInsetLeft">0dp</item>
        <item name="contentInsetStart">0dp</item>
        <item name="contentInsetRight">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="android:background">@color/black</item>
    </style>

    <style name="CommonContainerLayout">
        <item name="android:clickable">true</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="HintText" parent="Widget.Design.TextInputLayout">
        <item name="android:textColor">@color/warm_grey</item>
        <item name="android:textSize">@dimen/text_size_12</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:maxLength">20</item>
        <item name="android:imeOptions">flagNoExtractUi</item>
        <item name="android:textSize">@dimen/text_size_20</item>
    </style>

    <style name="KeyPadStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_30</item>
    </style>

    <style name="TableRowStyle">
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">@dimen/common_padding</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/text_size_15</item>
    </style>

</resources>
